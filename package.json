{
  "name": "energy-ic-copilot-web",
  "version": "1.0.0",
  "description": "Web frontend for Energy IC Copilot",
  "private": true,
  "scripts": {
    "dev": "cd apps/web && next dev",
    "dev:debug": "cd apps/web && NODE_OPTIONS='--inspect' next dev",
    "deploy": "npx vercel --prod",
    "demo:check": "cd apps/web && node scripts/demo-check.js",
    "clean": "cd apps/web && rm -rf .next .turbo",
    "build": "cd apps/web && next build",
    "build:analyze": "cd apps/web && ANALYZE=true next build",
    "start": "cd apps/web && next start",
    "preview": "cd apps/web && next build && next start",
    "lint": "cd apps/web && next lint",
    "lint:fix": "cd apps/web && next lint --fix",
    "typecheck": "cd apps/web && tsc --noEmit",
    "test": "cd apps/web && npm run lint && npm run typecheck",
    "postinstall": "cd apps/web && npm install"
  },
  "dependencies": {
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-select": "^2.1.6",
    "@radix-ui/react-slider": "^1.2.0",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-toast": "^1.2.15",
    "@sparticuz/chromium": "^119.0.2",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "lucide-react": "^0.344.0",
    "next": "14.2.32",
    "puppeteer-core": "^21.6.1",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "recharts": "^2.8.0",
    "tailwind-merge": "^2.0.0",
    "zod": "^3.22.4",
    "@radix-ui/react-dialog": "^1.1.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.54.0",
    "eslint-config-next": "^14.2.3",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.3.2"
  }
}
