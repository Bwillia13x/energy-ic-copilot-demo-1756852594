{
  "version": 2,
  "framework": "nextjs",
  "buildCommand": "cd apps/web && npm run build",
  "devCommand": "cd apps/web && npm run dev",
  "outputDirectory": "apps/web/.next",
  "installCommand": "npm install",
  "functions": {
    "apps/web/.next/server/app/api/**/*.js": {
      "runtime": "nodejs18.x"
    }
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/:path*"
    }
  ],
  "env": {
    "NEXT_PUBLIC_API_URL": "/api/demo",
    "NEXT_PUBLIC_DEMO": "1",
    "NEXT_PUBLIC_SITE_URL": "https://energy-ic-copilot.vercel.app"
  },
  "regions": ["iad1"]
}
